<Page x:Class="PhotoTools.Application.Pages.RenamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhotoTools.Application.Pages"
      xmlns:viewmodels="clr-namespace:PhotoTools.Application.ViewModels"
      d:DataContext="{d:DesignInstance viewmodels:RenameViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      FontSize="14"
      Title="RenamePage">
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="20"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="20"/>
        </Style>
    </Page.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="路径" Margin="2"/>
            <Button Grid.Column="2" Content="···" Width="20" Margin="2" Command="{Binding ChooseWorkPathCommand}"/>
            <TextBox Grid.Column="1" IsReadOnly="true" Margin="2" Text="{Binding WorkPath}"/>
        </Grid>
        <DockPanel FlowDirection="RightToLeft" Grid.Row="1" Grid.ColumnSpan="2" Margin="2">
            <GroupBox Header="替换文字" FlowDirection="LeftToRight">
                <DockPanel>
                    <TextBox Margin="2" Width="80" Text="{Binding OrignalText, Mode=TwoWay}"/>
                    <TextBlock Text="→" FontSize="18" FontWeight="Bold"/>
                    <TextBox Margin="2" Width="80" Text="{Binding ReplacedText, Mode=TwoWay}"/>
                </DockPanel>
            </GroupBox>
            <GroupBox Header="添加" Margin="2,0" FlowDirection="LeftToRight">
                <DockPanel>
                    <TextBlock Text="前缀 " Margin="2,2,0,2"/>
                    <TextBox Margin="0,2,2,2" Width="80" Text="{Binding AddedPrefix, Mode=TwoWay}"/>
                    <TextBlock Text="后缀 " Margin="5,2,0,2"/>
                    <TextBox Margin="0,2,2,2" Width="80" Text="{Binding AddedSuffix, Mode=TwoWay}"/>
                </DockPanel>
            </GroupBox>
            <GroupBox Header="筛选" Margin="2,0,0,0" FlowDirection="LeftToRight">
                <TextBox Margin="2" Width="80" Text="{Binding Pattern, Mode=TwoWay}"/>
            </GroupBox>
        </DockPanel>
        <GroupBox Header="旧文件名" Grid.Row="3" Grid.Column="0" Margin="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <ListBox Margin="2" ItemsSource="{Binding OrignalFileList}"/>
                <DockPanel Grid.Row="1" Grid.Column="0">
                    <TextBlock Margin="2" Text="总文件数: " HorizontalAlignment="Left"/>
                    <TextBlock Margin="10,2" Text="{Binding OrignalFileCount}" HorizontalAlignment="Left"/>
                </DockPanel>
            </Grid>
        </GroupBox>
        <GroupBox Header="新文件名" Grid.Row="3" Grid.Column="1" Margin="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <ListBox Margin="2" ItemsSource="{Binding RenamedFileList}"/>
                <DockPanel Grid.Row="1" >
                    <TextBlock Margin="2" Text="重命名文件数: " HorizontalAlignment="Left"/>
                    <TextBlock Margin="10,2" Text="{Binding ReanamedFileCount}" HorizontalAlignment="Left"/>
                </DockPanel>
            </Grid>
        </GroupBox>
        <Button Grid.Row="4" Grid.Column="1" Margin="2" Content="执行重命名" Height="22"
                Width="140" Command="{Binding RenameCommand}" 
                HorizontalAlignment="Right" VerticalContentAlignment="Center"/>
    </Grid>
</Page>
