<Page x:Class="PhotoTools.Application.Pages.CopyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhotoTools.Application.Pages"
      xmlns:viewmodel="clr-namespace:PhotoTools.Application.ViewModels"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DataContext="{d:DesignInstance viewmodel:CopyViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      FontSize="14"
      Title="CopyCutPage">
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="20"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="20"/>
        </Style>
    </Page.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="jpg 路径" Grid.Row="0" Grid.Column="0" Margin="2"/>
            <TextBlock Text="raw 路径" Grid.Row="1" Grid.Column="0" Margin="2"/>
            <TextBlock Text="目标路径" Grid.Row="2" Grid.Column="0" Margin="2"/>

            <TextBox Grid.Row="0" Grid.Column="1" Margin="2" Text="{Binding JpgPath}"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="2" Text="{Binding RawPath}"/>
            <TextBox Grid.Row="2" Grid.Column="1" Margin="2" Text="{Binding TargetPath}"/>

            <Button Content="···" Grid.Row="0" Grid.Column="2" Width="20" Margin="2" Command="{Binding ChooseJpgPathCommand}"/>
            <Button Content="···" Grid.Row="1" Grid.Column="2" Width="20" Margin="2" Command="{Binding ChooseRawPathCommand}"/>
            <Button Content="···" Grid.Row="2" Grid.Column="2" Width="20" Margin="2" Command="{Binding ChooseTargetPathCommand}"/>

            <TextBlock Text="jpg 文件后缀" Grid.Row="0" Grid.Column="3" Margin="20,2,2,2"/>
            <TextBlock Text="raw 文件后缀" Grid.Row="1" Grid.Column="3" Margin="20,2,2,2"/>

            <TextBox Text="{Binding JpgSuffix}" Width="80" Grid.Row="0" Grid.Column="4" Margin="5, 3"/>
            <TextBox Text="{Binding RawSuffix}" Width="80" Grid.Row="1" Grid.Column="4" Margin="5, 3"/>
        </Grid>
        <GroupBox Header="jpg 文件列表" Grid.Row="1" Grid.Column="0" Margin="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <ListBox Margin="2" ItemsSource="{Binding JpgList}"/>
                <DockPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left">
                    <TextBlock Text="jpg 文件总数: " Margin="2,0"/>
                    <TextBlock Text="{Binding JpgTotalCount}"/>
                </DockPanel>
                <DockPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left">
                    <TextBlock Text="未找到对应 raw 文件数量: " Margin="2,2,2,0"/>
                    <TextBlock Text="{Binding JpgResidueCount}"/>
                </DockPanel>
            </Grid>
        </GroupBox>
        <GroupBox Header="raw 文件列表" 
                  Grid.Row="1" Grid.Column="1" Margin="2" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <ListBox Margin="2" ItemsSource="{Binding RawList}"/>
                <DockPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left">
                    <TextBlock Text="raw 文件总数: " Margin="2,0"/>
                    <TextBlock Text="{Binding RawTotalCount}"/>
                </DockPanel>
                <DockPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left">
                    <TextBlock Text="未找到对应 jpg 文件数: " Margin="2,2,2,0"/>
                    <TextBlock Text="{Binding RawResidueCount}"/>
                </DockPanel>
            </Grid>
        </GroupBox>
        <ProgressBar Grid.Row="2" Grid.ColumnSpan="2" Height="15" Margin="2,3" Maximum="{Binding MaxProgress}" Value="{Binding Progress}"/>
        <Button Content="刷新" Width="80" Margin="2"
            Command="{Binding RefreshCommand}"  IsEnabled="{Binding IsIdel}"
            HorizontalAlignment="Left" Grid.Row="5" Grid.Column="0"/>
        <DockPanel FlowDirection="RightToLeft" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
            <Button Content="剪切对应 raw 到目标路径" Width="200" Margin="2"
                Command="{Binding AsyncMoveCommand}" IsEnabled="{Binding IsIdel}"/>
            <Button Content="复制对应 raw 到目标路径" Width="200" Margin="2"
                Command="{Binding AsyncCopyCommand}" IsEnabled="{Binding IsIdel}"/>
        </DockPanel>
    </Grid>
</Page>
